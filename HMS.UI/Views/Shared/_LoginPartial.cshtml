@{
}

@inject SignInManager<SiteUser> SignInManager
@inject UserManager<SiteUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right d-flex" style="flex-direction:row">
            <div class="menu-item px-5">
                <li class="menu-title">
                    <a class="menu-link px-5" asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">
                    <h4>  Hello @UserManager.GetUserName(User)!</h4>
                    </a>
                </li>
                <li class="menu-title">
                <button type="submit" class="btn btn-danger">تسجيل الخروج</button>
                </li>
            </div>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right d-flex" style="flex-direction:row">
        <div class="menu-item px-5">
            <li class="menu-title">
                <a class="menu-link px-5" asp-area="" asp-controller="Account" asp-action="Login">
                    تسجيل الدخول
                </a>
            </li>
        </div>
    </ul>
}
