@model HMS.Domain.Entities.ViewModels.ReservationHallPagingVM

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "custom";
}

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>name</th>
                    <th>data</th>
                    <th>user name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.reservations)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Date</td>
                        <td>@item.User_Name</td>
                    </tr>
                }
            </tbody>
        </table>

        <center>
            @Model.totalPages;
            <br />
            <a href="/reservation/paging/?pagenum=@Convert.ToInt32(Model.CurrentPage-1)">@Convert.ToInt32(Model.CurrentPage-1)</a>  --- @Model.CurrentPage ---- <a href="/reservation/paging?pagenum=@Convert.ToInt32(Model.CurrentPage+1)">@Convert.ToInt32(Model.CurrentPage+1)</a>
        </center>

    </div>
</div>